datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String             @id
  name              String
  email             String
  verified          Boolean
  createdAt         DateTime
  UserPool          UserPool           @relation(fields: [userPoolId], references: [id])
  userPoolId        String
  verificationCodes VerificationCode[]
}

model VerificationCode {
  id        String   @id
  code      String
  createdAt DateTime
  User      User     @relation(fields: [userId], references: [id])
  userId    String
}

model UserPool {
  id              String           @id
  privateKey      String
  createdAt       DateTime
  users           User[]
  userPoolClients UserPoolClient[]
}

model UserPoolClient {
  id         String   @id
  createdAt  DateTime
  UserPool   UserPool @relation(fields: [userPoolId], references: [id])
  userPoolId String
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
}
