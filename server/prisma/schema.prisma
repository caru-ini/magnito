datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String   @id
  name             String
  email            String
  verified         Boolean
  confirmationCode String
  salt             String
  verifier         String
  refreshToken     String
  createdAt        DateTime
  UserPool         UserPool @relation(fields: [userPoolId], references: [id])
  userPoolId       String
}

model UserPool {
  id              String           @id
  privateKey      String
  createdAt       DateTime
  users           User[]
  userPoolClients UserPoolClient[]
}

model UserPoolClient {
  id         String   @id
  createdAt  DateTime
  UserPool   UserPool @relation(fields: [userPoolId], references: [id])
  userPoolId String
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
}
